      "args": [
        "-y",
        "@upstash/context7-mcp@latest"
      ]
    },
    "exa": {
      "command": "npx",
      "args": [
        "-y",
        "exa-mcp-server"
      ],
      "env": {
        "EXA_API_KEY": "8afc4f0d-0cef-4081-a4d0-976728fcc49c"
      }
    },
    "shrimp-task-manager": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-shrimp-task-manager"
      ],
      "env": {
        "DATA_DIR": "/home/maikeu/MeusProgramas/TestQwen/shrimp/data",
        "TEMPLATES_USE": "en",
        "ENABLE_GUI": "false"
      },
      "alwaysAllow": [
        "list_tasks",
